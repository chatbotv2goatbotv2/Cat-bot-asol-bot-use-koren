const fs = require("fs");
const { downloadVideo } = require("sagor-video-downloader");

module.exports = {
    config: {
        name: "autolink",
        version: "1.1",
        author: "SaGor FIXED by Akash Translate Bangla to English By Helal",
        countDown: 5,
        role: 0,
        shortDescription: "Auto-download & send videos with title (Improved)",
        category: "media",
    },

    onStart: async function () {},

    onChat: async function ({ api, event }) {
        const threadID = event.threadID;
        const messageID = event.messageID;
        const message = event.body || "";

        // Find all links in the message
        const linkMatches = message.match(/(https?:\/\/[^\s]+)/g);
        if (!linkMatches || linkMatches.length === 0) return;

        // Remove duplicate links
        const uniqueLinks = [...new Set(linkMatches)];

        // React: start processing
        api.setMessageReaction("â³", messageID, () => {}, true);

        let successCount = 0;
        let failCount = 0;

        for (const url of uniqueLinks) {
            try {
                // Send loading message WITHOUT showing the link
                const loadingMsg = await api.sendMessage(
                    `Downloading please wait... â³`,
                    threadID
                );

                const { title, filePath } = await downloadVideo(url);
                if (!filePath || !fs.existsSync(filePath)) {
                    throw new Error("File not downloaded");
                }

                // Check file size (limit 25MB)
                const stats = fs.statSync(filePath);
                const fileSizeInMB = stats.size / (1024 * 1024);

                if (fileSizeInMB > 25) {
                    api.unsendMessage(loadingMsg.messageID);
                    api.sendMessage(
                        `âŒ Video too large (${fileSizeInMB.toFixed(1)} MB).`,
                        threadID
                    );
                    fs.unlinkSync(filePath);
                    failCount++;
                    continue;
                }

                // Send video with title
                await api.sendMessage(
                    {
                        body: `ğŸ¬ *${title || "Video"}*`,
                        attachment: fs.createReadStream(filePath)
                    },
                    threadID,
                    () => {
                        fs.unlinkSync(filePath); // Delete after sending
                    }
                );

                // Remove loading message
                api.unsendMessage(loadingMsg.messageID);
                successCount++;

            } catch (err) {
                failCount++;
                api.unsendMessage(loadingMsg?.messageID || "");
                api.sendMessage(
                    `âŒ Download failed: ${err.message || "Unknown error"}`,
                    threadID
                );
            }
        }

        // Final reaction
        const finalReaction = successCount > 0 && failCount === 0 ? "âœ…" :
                              successCount > 0 ? "âš ï¸" : "âŒ";

        api.setMessageReaction(finalReaction, messageID, () => {}, true);

        // Summary message (optional)
        if (uniqueLinks.length > 1) {
            setTimeout(() => {
                api.sendMessage(
                    `ğŸ“Š Summary: âœ… ${successCount} succeeded | âŒ ${failCount} failed`,
                    threadID
                );
            }, 2000);
        }
    }
};